{
    "manifest_version": 2,
    "name": "sifty",
    "version": "0.1",

    "description": "Save Images From Tabs, Yo!",

    "icons": {
        "48": "icons/sifty-48.png",
        "96": "icons/sifty-96.png"
    },

    "permissions": [
        "tabs",
        "downloads",
        "http://*/",
        "https://*/"
    ],

    "browser_action": {
        "default_icon": {
            "48": "icons/sifty-48.png",
            "96": "icons/sifty-96.png"
        },
        "default_title": "Save Images From Tabs, Yo!"
    },

    "background": {
        "scripts": ["sift.js"]
    }
}
