{
    "manifest_version": 2,
    "name": "sifty",
    "version": "0.1.2",

    "description": "Save Images From Tabs, Yo!",

    "icons": {
        "16": "icons/sifty.svg",
        "32": "icons/sifty.svg",
        "48": "icons/sifty.svg",
        "64": "icons/sifty.svg",
        "96": "icons/sifty.svg"
    },

    "permissions": [
        "tabs",
        "downloads",
        "http://*/",
        "https://*/"
    ],

    "browser_action": {
        "default_icon": {
            "16": "icons/sifty.svg",
            "32": "icons/sifty.svg",
            "48": "icons/sifty.svg",
            "64": "icons/sifty.svg",
            "96": "icons/sifty.svg"
        },
        "default_title": "Save Images From Tabs, Yo!"
    },

    "background": {
        "scripts": ["sifty.js"]
    }
}
